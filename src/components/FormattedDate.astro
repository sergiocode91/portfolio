---
type Props = {
  date: Date;
};

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("es-ES", {
      year: "numeric",
      month: "short",
      day: "numeric",
    }).split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')
  }
</time>
