---
import "@fontsource-variable/newsreader";
import "@fontsource-variable/inter";

import { ViewTransitions } from "astro:transitions";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
interface Props {
  title?: string;
  description?: string;
  image?: { src: string; alt?: string };
}

const { title, description, image } = Astro.props;
const baseURL = "https://www.sergiocode.dev";
const completeImageUrl = image
  ? `${baseURL}${image}`
  : `${baseURL}/blog-placeholder.jpeg`;

const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description
        ? description
        : "Bienvenido a sergiocode.dev, donde comparto mis conocimientos y experiencias sobre desarrollo web y programaciÃ³n."}
    />
    <meta property="og:image" content={completeImageUrl} />
    <meta property="og:url" content={Astro.url} />
    <!-- End Open Graph Meta Tags -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-secondary dark:bg-primary">
    <main class="w-full max-w-[800px] mx-auto px-6">
      <ViewTransitions />
      <Header />
      <slot />
      <Footer />
    </main>

    <script>
      if (localStorage.theme === "dark") {
        document.documentElement.classList.add("dark");
      }
    </script>
