<style is:global>
  html {
    font-family: "Inter Variable", system-ui, sans-serif;
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
  }

  .copy-button {
    font-size: 12px;
    top: 10px;
    right: 10px;
    position: absolute;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .dark .prose h1,
  .dark .prose h2,
  .dark .prose h3,
  .dark .prose h4,
  .dark .prose h5,
  .dark .prose h6 {
