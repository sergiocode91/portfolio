---
import Card from "../components/Card.astro";

type Post = {
  id: string;
  slug: string;
  body: string;
  collection: string;
  data: {
    title: string;
    description: string;
    createdDate: string;
    author: string;
  }
};

const { posts } = Astro.props;
---

<div>
  {
    posts.map((post: Post) => (
      <div>
        <Card
          title={post?.data.title}
          description={post?.data.description}
          createdDate={post?.data.createdDate}
          slug={post?.slug}
        />
      </div>
    ))
  }
</div>
